<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="sv.edu.udb.www.proyectodwf.entities.Reservaciones">
        <table name="reservaciones" schema="dwf_proyecto" catalog=""/>
        <attributes>
            <id name="reservacionId">
                <column name="reservacion_id" precision="-1"/>
            </id>
            <basic name="eventoId">
                <column name="evento_id" nullable="false" precision="-1"/>
            </basic>
            <basic name="usuarioId">
                <column name="usuario_id" nullable="false" precision="-1"/>
            </basic>
            <basic name="nombreContacto">
                <column name="nombre_contacto" nullable="false" length="100"/>
            </basic>
            <basic name="correoElectronico">
                <column name="correo_electronico" nullable="false" length="100"/>
            </basic>
            <basic name="telefono">
                <column name="telefono" nullable="false" length="20"/>
            </basic>
            <basic name="cantidadCupos">
                <column name="cantidad_cupos" nullable="false" precision="-1"/>
            </basic>
            <basic name="totalPagar">
                <column name="total_pagar" nullable="false" precision="2"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
